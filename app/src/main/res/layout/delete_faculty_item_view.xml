<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:theme="@style/AppTheme"
    android:orientation="vertical"
    android:layout_marginRight="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/darkBlue"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/FImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/user_profile_icon"
                    tools:ignore="ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/FName"
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18sp"
                        android:fontFamily="@font/andika_new_basic"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/dr_ashish_singh_patel"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/FDesignation"
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="14sp"
                        android:fontFamily="@font/andika_new_basic"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/asosiate_professor"
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:id="@+id/FBranch"
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="14sp"
                        android:fontFamily="@font/andika_new_basic"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/computer_science_and_engineering"
                        tools:ignore="RtlHardcoded" />
                    <TextView
                        android:id="@+id/FContact"
                        android:layout_width="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="14sp"
                        android:fontFamily="@font/andika_new_basic"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/ashish_cse_nitmz_ac_in"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>


            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/UpdateBtn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/search_bg"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:fontFamily="@font/convergence"
                android:text="@string/update"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/DeleteBtn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/search_bg"
                android:clickable="true"
                android:elevation="5dp"
                android:focusable="true"
                android:fontFamily="@font/convergence"
                android:text="@string/delete"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="SmallSp,TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>