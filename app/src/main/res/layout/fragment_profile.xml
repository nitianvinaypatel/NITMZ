<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:layout_marginBottom="5dp"
    android:theme="@style/AppTheme"
    tools:context=".ui.Profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_height="40dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user_profile_icon"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/darkBlue"
                android:background="@drawable/circular_shape" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="335dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_btn_design" >

                    <LinearLayout
                        android:layout_width="120dp"
                        android:orientation="vertical"
                        android:layout_height="330dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:padding="5dp"
                            android:text="Name        :"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                        <TextView
                            android:text="Roll No      :"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Branch      :"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Semester  :"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Hostel       :"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Mob No     :"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/andika_new_basic"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Course      :"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/andika_new_basic"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <TextView
                            android:text="Email Id    :"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="230dp"
                        android:orientation="vertical"
                        android:layout_height="330dp">

                        <TextView
                            android:id="@+id/user_name"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textSize="18dp"
                            android:text=""
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                        <TextView
                            android:id="@+id/user_rollno"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_branch"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textSize="18dp"
                            android:fontFamily="@font/andika_new_basic"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_semester"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_hostel"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_mobno"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_course"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                        <TextView
                            android:id="@+id/user_emailid"
                            android:text=""
                            android:layout_marginLeft="1dp"
                            android:textColor="@color/white"
                            android:padding="0dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:textSize="16dp"
                            android:layout_marginRight="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/manage_account"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/login_btn_design"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/edit_profile" />

                    <TextView

                        android:text="Edit Profile"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow_ic" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:background="@drawable/login_btn_design"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/password" />

                    <TextView

                        android:text="Update Password"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/right_arrow_ic" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_logout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:background="@drawable/login_btn_design"
                    android:layout_height="55dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logout_white" />

                    <TextView

                        android:text="Log Out"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="25dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="130dp"
                        android:layout_gravity="center"
                        android:src="@drawable/right_arrow_ic" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</FrameLayout>