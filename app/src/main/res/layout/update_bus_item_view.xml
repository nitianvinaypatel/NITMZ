<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkBlue"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="@string/bus_no"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,TextSizeCheck" />

                <TextView
                    android:id="@+id/busNo"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/_10"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,TextSizeCheck" />

                <TextView
                    android:id="@+id/hostelName"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="@string/boys_hostel_1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded,TextSizeCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:text="@string/_08_20_am" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/andika_new_basic"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/hostel"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/andika_new_basic"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/us" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/andika_new_basic"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:text="@string/college"
                    tools:ignore="RtlHardcoded" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/UpdateBtn"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/search_bg"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:fontFamily="@font/convergence"
                    android:text="@string/update"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/DeleteBtn"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/search_bg"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:fontFamily="@font/convergence"
                    android:text="@string/delete"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp,TouchTargetSizeCheck" />

            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>