                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="Report to Developer!" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gradient_bpink"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Period-5:"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="01:00-02:00 PM" />

                    </LinearLayout>

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika_new_basic"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="! Wow Its Lunch Time !" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="There is no sincere love than the love of food!" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gradient_bpink180"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
