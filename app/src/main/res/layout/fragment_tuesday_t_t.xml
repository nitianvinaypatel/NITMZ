<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/AppTheme">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gradient_bpink"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Period-1:"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="09:00-10:00 AM" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/subject1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/andika_new_basic"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="No Data Available" />

                    <TextView
                        android:id="@+id/faculty1"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="Report to Developer!" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_gradient_bpink180"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Period-2:"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:text="10:00-11:00 AM" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/subject2"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:fontFamily="@font/andika_new_basic"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="No Data Available" />

                    <TextView
                        android:id="@+id/faculty2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/andika_new_basic"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="Report to Developer!" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginTop="10dp"
