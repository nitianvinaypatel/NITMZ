                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/andika_new_basic"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
