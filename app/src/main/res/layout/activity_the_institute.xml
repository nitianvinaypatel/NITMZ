<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".TheInstitute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rectangle"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/backbtn"
                android:src="@drawable/backbtn"
                android:background="@color/darkBlue"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_marginStart="8dp"
                android:layout_height="25dp" />

            <TextView
                android:text="The Institute"
                android:textSize="23dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/convergence"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>












    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="NIT Mizoram"
                android:textSize="40sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-15dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/institxt1" />

            <ImageView
                android:src="@drawable/nitmz_admin"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:scaleType="fitXY"
                android:layout_height="400dp"/>


            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Vision"
                android:textSize="30sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Mission"
                android:textSize="30sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Objectives"
                android:textSize="30sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt5" />

            <ImageView
                android:src="@drawable/director"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/andika_new_basic"
                android:gravity="center"
                android:text="Prof. S. Sundar (Director NIT Mizoram)"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Message from Directorâ€™s Desk"
                android:textSize="25sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:gravity="center"
                android:text="Address"
                android:textSize="30sp" />

            <com.example.nitmz.utils.Montserrat_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="@string/institxt7" />



        </LinearLayout>



    </ScrollView>


</LinearLayout>



